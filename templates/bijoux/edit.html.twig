{% extends "base.html.twig" %}

{% block title %}Edition d'un produit
{% endblock %}

{% form_theme form 'bijoux/_collection.html.twig' %}

{% block body %}

	<div class="container">
		<h1>Modifier l'produit :
			{{ bijoux.title }}
		</h1>
		{{ form_start(form) }}

		{{ form_widget(form) }}

		<button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

		{{ form_end(form) }}
	</div>

{% endblock %}


{% block javascripts %}
	<script type="text/javascript" src="/js/bijoux.js"></script>
{% endblock %}
