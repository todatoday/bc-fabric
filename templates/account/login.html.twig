{% extends 'base.html.twig' %}

{% block title %}Connexion au site
{% endblock %}

{% block body %}
	<div class="container logggin">
		<div class="row formm">
			<div class="col-md-3">&nbsp;</div>

			<div class="col-md-6">
				<div
					class="bg-light py-3 px-3">

					{# Afficher les erreur si il en y a sur le formulaire de connexion  #}
					{% if hasError %}
						<div class="alert alert-danger">Une erreur est survenu, le nom d'utilisateur ou alors le mot de passe est invalide</div>
					{% endif %}

					<h1>Connectez vous !</h1>
					<form action="{{ path('account_login') }}" method="post">
						<div class="form-group champ">
							<label for="email">Email</label>
							<input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email..." required value="{{ username }}">
						</div>
						<div class="form-group champ">
							<label for="password">Mot de passe</label>
							<input type="password" name="_password" id="password" placeholder="Mot de passe ..." class="form-control" required>
						</div>
						<div class="form-group champ">
							<button type="submit" class="btn btn-success">Connexion !</button>
						</div>
					</form>
				</div>
			</div>

		</div>

	</div>
{% endblock %}
