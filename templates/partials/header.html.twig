
<header class="header">

	<div class="logoTogl-container">

		<div class="logo">
			<img src="images/logo-bc-Fabric 2.png" alt="logo" />


		</div>
		<!-- le menu responsive  -->
		<div class="toggle">

			<i class="fa fa-bars open" aria-hidden="true"></i>
			<i class="fa fa-times close" aria-hidden="true"></i>

		</div>
		<hr />
	</div>

	<ul class="menuu">
		<li><a class="" href="{{ path('homepage') }}">Accueil</a> </li>
		<li><a href="{{ path('bijouxs_index') }}">Bijoux</a> </li>
		<li><a href="{{ path('coutures_index') }}">Couture</a> </li>

		{# <li><a href="{{ path('account_register') }}">Inscription</a> </li>
		<li><a href="{{ path('account_login') }}">Connexion</a> </li> #}
		{% if app.user %}
		<li class="nav-item dropdown">
			<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" id="accountDropdownLink"
				role="button">
				{# Avatar de {{app.user.fullName}} #}
				<img src="{{app.user.picture}}" class="avatar avatar-mini" alt="">
				{{app.user.fullName}}
			</a>

			<div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">

				{% if app.user %}
				<a href="{{ path('bijouxs_create') }}" class="dropdown-item">Créer un produit</a>
				{% else %}
				<a href="{{ path('coutures_create') }}" class="dropdown-item">Créer un produit</a>
				{% endif %}
				<div class="dropdown-divider"></div>

				<a class="dropdown-item" href="{{ path('account_index') }}">Mon compte</a>
				<a class="dropdown-item" href="{{ path('account_profile') }}">Modifier mon profil</a>
				<div class="dropdown-divider"></div>
				<a class="dropdown-item" href="{{ path('account_logout') }}">Déconnexion</a>
			</div>
		</li>

		{% else %}
		<li class="nav-item">
			<a href="{{ path('account_register') }}" class="nav-link">Inscription</a>
		</li>
		<li class="nav-item">
			<a href="{{ path('account_login') }}" class="nav-link">Connexion</a>
		</li>
		{% endif %}
	</ul>



</header>





