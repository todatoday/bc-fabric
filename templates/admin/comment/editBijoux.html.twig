{% extends "admin/base.html.twig" %}

{% block title %}
    Modification du commentaire n° 
{{commentB.id}}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5"> Modification du commentaire n° 
            {{commentB.id}}
        </h1>
            <div class="alert alert-info">
            <strong>Produit liée : </strong> {{commentB.bijoux.title}} <br>
            <strong>Auteur : </strong> {{commentB.author.fullName}} <br>
            <strong>Date de création : </strong> {{commentB.createdAt|date('d/m/Y H:i')}} <br>
            <strong>Note donnée : </strong> {{commentB.rating}}
        </div>
        {{ form_start(form) }}

        {{form_widget(form) }}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check"></i>
                Enregistrer les modifications
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}